<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    
	
	<ToggleButton
        android:id="@+id/startTargetListingButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textOff="Look For Targets"
        android:textOn="Stop" 
       
        />
	
	<View
        android:id="@+id/separatorBar"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/startTargetListingButton"
        android:background="@android:color/white" />
	
	<ListView
        android:id="@+id/targetList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separatorBar"
        android:layout_alignParentBottom="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

    </ListView>
    

</RelativeLayout>